.main-chat
  .main-chat-header
    .main-chat-header__left-box
      %h2.main-chat-header__left-box__current-group
        = @group.name
      %ul.main-chat-header__left-box__member-list
        Menber:
        %li.main-chat-header__left-box__member-list__member
        - @group.users.each do |user|
          = user.name
    .main-chat-header__edit-btn
      = link_to "Edit","/groups/#{current_user.id}/edit",method: :get
      

        


  .messages
    = render partial: 'message', collection: @messages


  .form
    = form_for [@group, @message] do |f|
      = f.text_field :text, class: 'form__message', placeholder: 'type a message'
      .form__mask
        = f.label :image, class: 'form__mask__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__submit'

